<!doctype html>

<html>
<head>
	<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{title}}</title>

    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/quill.base.css" rel="stylesheet">
	<link href="/css/quill.snow.css" rel="stylesheet">
	<link href="/css/gamerev.css" rel="stylesheet">

	<script src="/js/jquery-1.11.0.min.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/quill.js" type="text/javascript"></script>
	<script src="/js/header-controller.js" type="text/javascript"></script>
	{{#if loadScript}}
	<script src="/js/{{page}}-controller.js" type="text/javascript"></script>
	{{/if}}
</head>

<body>
	{{{createReviewModal}}}

	<div id="header">
		<nav id="header-wrapper" class="navbar navbar-default">
			<div id="header-container" class="z1 container-fluid">
				<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header">
				  <button id="header-menu-button" type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#toggle-header">
				    <span class="sr-only">Toggle navigation</span>
				    <span class="icon-bar"></span>
				    <span class="icon-bar"></span>
				    <span class="icon-bar"></span>
				  </button>
				  <a id="logo" class="navbar-brand animate" href="/">GameRev</a>
				</div>

				<div id="toggle-header" class="collapse navbar-collapse">
					<form id="search-bar" class="navbar-form navbar-left input-group" role="search">
						<div id="search-group" class="z0 form-group">
							<input id="search-form" class="form-control" placeholder="Search games & users" type="text">
							<div class="input-group-btn">
								<button id="header-search-button" type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
							</div>
						</div>
					</form>

				    <ul id="header-login-container" class="nav navbar-nav navbar-right">
				    	{{#if loggedIn}}
				        <li class="dropdown">
				          	<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{{username}}<span class="caret"></span></a>
					        <ul class="dropdown-menu" role="menu">
					            <li><a href="/users/{{username}}">Profile</a></li>
					            <li><a id="user-settings-button" href="/user-settings">Settings</a></li>
					            <li><a id="logout-button">Logout</a></li>
					            <li class="divider"></li>
					            <li><a id="header-create-review-btn">Create a Review</a></li>
					        </ul>
				        </li>
				        {{else}}
	                    <li>
	                    	<a id="header-login" class="link display-inline-block" href="/login"><b>Login</b></a>
	                    	or
	                    	<a id="header-signup" class="link display-inline-block" href="/signup"><b>Create an Account</b></a>
	                    </li>
				        {{/if}}
				    </ul>
				</div>
			</div>
		</nav>
	</div>

