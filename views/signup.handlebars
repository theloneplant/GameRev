    {{{header}}}

    <div id="main-container">
        <div class="min-height-container container">
            <div class="row">
                <div id="signup-container" class="col-sm-6 col-md-4 col-md-offset-4">
                    <h3 class="text-center login-title">Create an Account</h3>
                    <input name="username" type="text" class="form-control" placeholder="Username" required autofocus>
                    <input name="email" type="text" class="form-control" placeholder="Email" required autofocus>
                    <input name="password" type="password" class="form-control" placeholder="Password" required autofocus>
                    <input name="repeatPassword" type="password" class="form-control" placeholder="Repeat Password" required>
                    <button id="signup-button" class="btn btn-lg btn-info btn-block">
                        Sign Up
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div id="footer">
        {{{footer}}}
    </div>
</body>
</html>
