	{{{header}}}

	<div id="main-container">
		<div id="featured-slider" class="carousel slide" data-ride="carousel">
		  <!-- Indicators -->
		  <ol class="carousel-indicators">
		    <li data-target="#featured-slider" data-slide-to="0" class="active"></li>
		    <li data-target="#featured-slider" data-slide-to="1"></li>
		    <li data-target="#featured-slider" data-slide-to="2"></li>
		    <li data-target="#featured-slider" data-slide-to="3"></li>
		    <li data-target="#featured-slider" data-slide-to="4"></li>
		  </ol>

		  <!-- Wrapper for slides -->
		  <div id="featured-slider-inner" class="carousel-inner" role="listbox">
		  	{{#each index.featured-slider}}
			    <div class="item {{active}}">
			    	<a id={{this.id}} href={{this.href}}>
			    		<img class="featured-pane cover" src={{this.src}} alt="Game Image">
			    	</a>
			    </div>
		    {{/each}}
		  </div>

		  <a class="left carousel-control" href="#featured-slider" role="button" data-slide="prev">
		    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
		    <span class="sr-only">Previous</span>
		  </a>
		  <a class="right carousel-control" href="#featured-slider" role="button" data-slide="next">
		    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
		    <span class="sr-only">Next</span>
		  </a>
		</div>

		<div id="create-review" class="jumbotron">
			<div class="container-fluid">
				<div class="row">
					<h3 class="text-center-horiz">Played any games recently?<br><br>Share your opinions with the community!</h3>
				    <a id="create-review-btn" class="btn btn-lg btn-info center-horiz" href="/new-review">
						Create a Review
					</a>
				</div>
			</div>
		</div>

		<div id="staff-picks-wrapper" class="z1 index-title container-fluid">
			<div class="max-width-container center-horiz">
				<h2 id="staff-picks-header" class="container-fluid">
					Staff Picks
				</h2>
			</div>
		</div>

		<div class="container-fluid">
			<ul id="staff-picks" class="max-width-container center horiz">
				<li class="z1 index-tile cover" data="/games/skyrim"
				style="background-image: url('/images/skyrim.jpg')">
					<div class="index-game-title animate">
						The Elder Scrolls V: Skyrim
					</div>
				</li>
				<li class="z1 index-tile cover" data="/games/farcry4"
				style="background-image: url('/images/farcry4-banner.jpg')">
					<div class="index-game-title animate">
						Far Cry 4
					</div>
				</li>
				<li class="z1 index-tile cover" data="/games/gtav"
				style="background-image: url('/images/gta5-banner.jpg')">
					<div class="index-game-title animate">
						Grand Theft Auto 5
					</div>
				</li>
				<li class="z1 index-tile cover" data="/games/dragon-age-inquisition"
				style="background-image: url('/images/dai-cover-wide.jpg')">
					<div class="index-game-title animate">
						Dragon Age: Inquisition
					</div>
				</li>
				<li class="z1 index-tile cover" data="/games/final-fantasy-XV"
				style="background-image: url('/images/finalfantasyxv.jpg')">
					<div class="index-game-title animate">
						Final Fantasy XV
					</div>
				</li>
				<li class="z1 index-tile cover" data="/games/revelations"
				style="background-image: url('/images/revelations.jpg')">
					<div class="index-game-title animate">
						Resident Evil Revelation
					</div>
				</li>
			</ul>
		</div>

		<div id="top-reviews-wrapper" class="z1 index-title container-fluid">
			<div class="max-width-container center-horiz">
				<h2 id="staff-picks-header" class="container-fluid">
					Top Reviews
				</h2>
			</div>
		</div>

		<div class="container-fluid">
			<ul id="staff-picks" class="max-width-container center horiz">
				{{#each reviews}}
				<li class="z1 index-tile cover" data="/reviews/{{this.id}}" 
				style="background-image: url('{{this.bannerImage}}')">
					<div class="index-review-title animate-slow {{toLowerCase this.rating}}">
						<div class="review-tile-title">{{this.title}}</div>
						<div class="review-tile-summary">{{this.summary}}</div>
						<div class="review-tile-game">{{this.game.title}}</div>
					</div>
				</li>
				{{/each}}
			</ul>
		</div>
	</div>

	<div id="footer">
		{{{footer}}}
	</div>
</body>
</html>
